{
  "name": "@darkobits/nlink",
  "version": "3.0.1",
  "author": "darkobits",
  "description": "An improved 'npm link'.",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkobits/nlink.git"
  },
  "keywords": [
    "npm",
    "link",
    "npm-link",
    "improved",
    "symlink",
    "lerna",
    "monorepo"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "nlink": "dist/bin/cli.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "del dist",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "tsc": "tsc --emitDeclarationOnly --pretty",
    "test": "jest",
    "prebuild": "del dist && run-p lint tsc",
    "build": "babel src --extensions='.ts' --ignore='**/*.spec.ts,**/*.d.ts' --out-dir=dist --source-maps=true --verbose",
    "postbuild": "del dist/**/*.spec.*",
    "prebump": "run-p build",
    "bump": "standard-version",
    "bump:beta": "npm run prebump && standard-version --prerelease=beta"
  },
  "dependencies": {
    "@darkobits/log": "^1.1.3",
    "chalk": "^2.4.2",
    "execa": "^1.0.0",
    "find-up": "^3.0.0",
    "fs-extra": "^7.0.1",
    "minimatch": "^3.0.4",
    "pkg-dir": "^3.0.0",
    "read-pkg-up": "^4.0.0",
    "validate-npm-package-name": "^3.0.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@types/execa": "^0.9.0",
    "@types/find-up": "^2.1.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.12",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^10.12.18",
    "@types/pkg-dir": "^2.0.0",
    "@types/read-pkg-up": "^3.0.1",
    "@types/yargs": "^12.0.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "del-cli": "^1.1.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^4.4.0",
    "tslint": "^5.12.0",
    "tslint-xo": "^0.11.0",
    "typescript": "^3.2.2"
  }
}

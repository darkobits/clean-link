{
  "name": "@darkobits/clean-link",
  "version": "2.0.1",
  "author": "darkobits",
  "description": "Improved 'npm link'.",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkobits/clean-link.git"
  },
  "keywords": [
    "npm",
    "link",
    "npm-link",
    "improved",
    "build",
    "symlink"
  ],
  "bin": {
    "clean-link-dir": "dist/bin/cli.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "del dist",
    "check:styles": "tslint --project tsconfig.json --format codeFrame",
    "check:types": "tsc --emitDeclarationOnly && rimraf **/*.spec.d.ts",
    "test": "jest",
    "prebuild": "run-p clean check:*",
    "build": "babel src --extensions='.ts' --ignore='**/*.spec.ts,**/*.d.ts' --out-dir=dist --source-maps=inline --verbose",
    "prebump": "run-p test build",
    "bump": "standard-version",
    "bump:beta": "npm run prebump && standard-version --prerelease=beta",
    "start": "nodemon --exec \"babel-node --extensions='.ts'\" src/index.ts"
  },
  "dependencies": {
    "@darkobits/log": "^1.1.3",
    "death": "^1.1.0",
    "del": "^3.0.0",
    "execa": "^0.10.0",
    "fs-extra": "^6.0.1",
    "pkg-dir": "^3.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/node": "^7.0.0-beta.51",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-stage-3": "^7.0.0-beta.51",
    "@babel/preset-typescript": "^7.0.0-beta.51",
    "@types/del": "^3.0.1",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.3",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "@types/pkg-dir": "^2.0.0",
    "@types/yargs": "^11.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "del-cli": "^1.1.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "standard-version": "^4.4.0",
    "tslint": "^5.10.0",
    "tslint-xo": "^0.8.0",
    "typescript": "^2.9.2"
  }
}

{
  "name": "@darkobits/clean-link",
  "version": "2.0.1",
  "author": "darkobits",
  "description": "Improved 'npm link'.",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkobits/clean-link.git"
  },
  "keywords": [
    "npm",
    "link",
    "npm-link",
    "improved",
    "build",
    "symlink"
  ],
  "bin": {
    "clean-link-dir": "dist/bin/cli.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "del dist",
    "check:styles": "tslint --project tsconfig.json --format codeFrame",
    "check:types": "tsc --emitDeclarationOnly && rimraf **/*.spec.d.ts",
    "test": "jest",
    "prebuild": "run-p clean check:*",
    "build": "babel src --extensions='.ts' --ignore='**/*.spec.ts,**/*.d.ts' --out-dir=dist --source-maps=inline --verbose",
    "prebump": "run-p test build",
    "bump": "standard-version",
    "bump:beta": "npm run prebump && standard-version --prerelease=beta"
  },
  "dependencies": {
    "@darkobits/log": "^1.1.3",
    "death": "^1.1.0",
    "del": "^3.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "pkg-dir": "^3.0.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-typescript": "^7.1.0",
    "@types/del": "^3.0.1",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/pkg-dir": "^2.0.0",
    "@types/yargs": "^12.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "del-cli": "^1.1.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^4.4.0",
    "tslint": "^5.11.0",
    "tslint-xo": "^0.10.0",
    "typescript": "^3.1.6"
  }
}
